@model List<Department>
@{
    ViewBag.Title = "Departments";
}

    <a class="btn btn-primary" asp-action="Create" asp-controller="Department" class="btn btn-danger">Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4"> No Departments</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DeptId</td>
                        <td>@item.DeptName</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a asp-action="Details" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-info">Details</a>
                            <a asp-action="Update" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-success">Update</a>
                            <a asp-action="Delete" onclick="return confirm('Are You Sure')" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-danger">Delete</a>


                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
