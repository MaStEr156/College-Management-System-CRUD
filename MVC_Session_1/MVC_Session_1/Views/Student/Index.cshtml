@model List<Student>
@{
    ViewBag.Title = "Students";
}

    <a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>DeptId</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6"> No Departments</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.Department.DeptName</td>
                        <td>
                            <a asp-action="Details" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Update" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-action="Delete" onclick="return confirm('Are you sure you want to delete this student?')" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>



                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
