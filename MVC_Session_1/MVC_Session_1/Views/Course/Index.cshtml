@model List<Course>
@{
    ViewBag.Title = "Courses";

}
<a asp-action="Create" asp-controller="Course" class="btn btn-primary">Create</a>
<br />
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Duration</th>
            <th>DeptNo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4"> No Students</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                if (item.Status)
                    continue;
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.Duration</td>
                    <td>@item.Department.DeptName</td>
                    <td>
                        <a asp-action="Details" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-success">Update</a>
                        <a asp-action="Delete" onclick="return confirm('Are You Sure')" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
